# ============================================================================
# Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values.
# The .env file should NOT be committed to git (add to .gitignore).
#
# Variables are passed to docker-compose and available in the container.
# ============================================================================

# ----------------------------------------------------------------------------
# Port Configuration
# ----------------------------------------------------------------------------
# Change these if default ports conflict with services on your host machine
# The quickstart command will auto-assign alternative ports if conflicts are detected
APP_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
POSTGRES_DB=devdb
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpassword

# Database URLs (for application use)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://redis:6379

# ----------------------------------------------------------------------------
# API Keys (do not commit actual values!)
# ----------------------------------------------------------------------------
# These can also be set in your host environment and will be inherited
# via ${localEnv:VAR} in devcontainer.json

# Anthropic Claude API
ANTHROPIC_API_KEY=

# OpenAI API (optional)
OPENAI_API_KEY=

# GitHub Token (for private repos, API access)
GITHUB_TOKEN=

# ----------------------------------------------------------------------------
# Build Configuration
# ----------------------------------------------------------------------------
# Set to "false" for minimal builds behind corporate proxies
INSTALL_SHELL_EXTRAS=true
INSTALL_DEV_TOOLS=true

# Set to "true" if you have a corporate CA certificate
INSTALL_CA_CERT=false

# ----------------------------------------------------------------------------
# Pre-built Image Configuration
# ----------------------------------------------------------------------------
# Use pre-built images for faster startup (requires internet, pulls from GHCR)
# Set USE_PREBUILT_IMAGE=true and specify the image to use

# Set to "true" to use pre-built images instead of building from scratch
USE_PREBUILT_IMAGE=false

# Pre-built image to pull (if USE_PREBUILT_IMAGE=true)
PREBUILT_IMAGE=ghcr.io/andrewcchoi/sandbox-maxxing/sandboxxer-base:latest

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Add your project-specific environment variables below
# APP_ENV=development
# APP_DEBUG=true
# APP_SECRET_KEY=
