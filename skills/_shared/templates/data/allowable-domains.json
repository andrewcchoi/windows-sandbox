    "content_delivery": {
      "description": "CDNs and mirrors",
      "mode_minimum": "advanced",
      "wildcard_domains": [
        "*.sourceforge.net"
      ],
      "domains": [
        "packagecloud.io"
      ],
      "additional_wildcards": ["*.packagecloud.io"]
    },
    "schema_configuration": {
      "description": "Schema and configuration repositories",
      "mode_minimum": "advanced",
      "domains": [
        "json-schema.org",
        "www.json-schema.org",
        "json.schemastore.org",
        "www.schemastore.org"
      ]
    }
  },
  "mode_defaults": {
    "basic": {
      "description": "Essential domains for basic development",
      "included_categories": [
        "anthropic_services",
        "version_control",
        "container_registries",
        "linux_distributions",
        "vscode"
      ],
      "included_subcategories": {
        "package_managers": ["npm", "python", "ruby", "rust", "go", "maven"]
      }
    },
    "advanced": {
      "description": "Curated minimal domains for security-focused development",
      "included_categories": [
        "anthropic_services",
        "version_control",
        "container_registries",
        "linux_distributions",
        "vscode"
      ],
      "included_subcategories": {
        "package_managers": ["npm", "python"]
      },
      "notes": "Advanced mode uses strict whitelist. Add project-specific domains as needed."
    },
    "yolo": {
      "description": "No default restrictions - user configures everything",
      "included_categories": [],
      "notes": "YOLO mode allows full customization with optional firewall. No defaults applied."
    }
  }
}
