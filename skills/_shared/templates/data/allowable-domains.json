      "mode_minimum": "basic",
      "domains": [
        "registry-1.docker.io",
        "auth.docker.io",
        "index.docker.io",
        "hub.docker.com",
        "www.docker.com",
        "production.cloudflare.docker.com",
        "download.docker.com",
        "ghcr.io",
        "mcr.microsoft.com"
      ],
      "wildcard_domains": [
        "*.gcr.io",
        "*.data.mcr.microsoft.com"
      ]
    },
    "cloud_platforms": {
      "description": "Major cloud provider APIs and services",
      "mode_minimum": "advanced",
      "sub_categories": {
        "google": {
          "domains": [
            "cloud.google.com",
            "accounts.google.com",
            "gcloud.google.com",
            "storage.googleapis.com",
            "compute.googleapis.com",
            "container.googleapis.com"
