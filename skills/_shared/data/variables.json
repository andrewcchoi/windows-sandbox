{
  "version": "4.0.0",
  "description": "Master catalog of configuration variables for DevContainer setup",
  "categories": {
    "build": {
      "description": "Build-time variables (Dockerfile ARG) for image construction",
      "mode_minimum": "basic",
      "variables": {
        "BASE_IMAGE": {
          "description": "Base Docker image for the container",
          "type": "ARG",
          "default": "python:3.12-slim-bookworm",
          "mode_minimum": "basic",
          "security_level": "public",
          "examples": [
            "python:3.12-slim-bookworm",
            "node:20-bookworm-slim",
            "mcr.microsoft.com/devcontainers/python:3.12"
          ]
        },
        "PYTHON_VERSION": {
          "description": "Python version to install",
          "type": "ARG",
          "default": "3.12",
          "mode_minimum": "intermediate",
          "security_level": "public",
          "examples": ["3.11", "3.12", "3.13"]
        },
        "NODE_VERSION": {
          "description": "Node.js version to install",
          "type": "ARG",
          "default": "20",
          "mode_minimum": "intermediate",
          "security_level": "public",
          "examples": ["18", "20", "22"]
        },
        "GO_VERSION": {
          "description": "Go version to install",
          "type": "ARG",
          "default": "1.22",
          "mode_minimum": "advanced",
          "security_level": "public",
          "examples": ["1.21", "1.22", "1.23"]
        },
        "RUST_VERSION": {
          "description": "Rust version to install",
          "type": "ARG",
          "default": "stable",
          "mode_minimum": "advanced",
          "security_level": "public",
          "examples": ["stable", "nightly", "1.75.0"]
        },
        "JAVA_VERSION": {
          "description": "Java/OpenJDK version to install",
          "type": "ARG",
          "default": "17",
          "mode_minimum": "advanced",
          "security_level": "public",
          "examples": ["11", "17", "21"]
        },
        "TZ": {
          "description": "Container timezone",
          "type": "ARG",
          "default": "UTC",
          "mode_minimum": "basic",
          "security_level": "public",
          "examples": ["UTC", "America/New_York", "Europe/London"]
        },
        "DEBIAN_FRONTEND": {
          "description": "Debian package manager frontend (noninteractive for builds)",
          "type": "ARG",
          "default": "noninteractive",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "CLAUDE_CODE_VERSION": {
          "description": "Claude Code CLI version to install",
          "type": "ARG",
          "default": "latest",
          "mode_minimum": "intermediate",
          "security_level": "public",
          "examples": ["latest", "0.1.0", "0.2.0"]
        }
      }
    },
    "runtime": {
      "description": "Runtime environment variables (ENV) that persist in containers",
      "mode_minimum": "basic",
      "variables": {
        "NODE_ENV": {
          "description": "Node.js environment mode",
          "type": "ENV",
          "default": "development",
          "mode_minimum": "basic",
          "security_level": "public",
          "examples": ["development", "production", "test"]
        },
        "PYTHONUNBUFFERED": {
          "description": "Disable Python output buffering",
          "type": "ENV",
          "default": "1",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "PYTHONDONTWRITEBYTECODE": {
          "description": "Prevent Python from writing .pyc files",
          "type": "ENV",
          "default": "1",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "GOPATH": {
          "description": "Go workspace path",
          "type": "ENV",
          "default": "/go",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "GOBIN": {
          "description": "Go binary installation path",
          "type": "ENV",
          "default": "/go/bin",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "RUST_BACKTRACE": {
          "description": "Enable Rust backtrace on panic",
          "type": "ENV",
          "default": "1",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "JAVA_HOME": {
          "description": "Java installation directory",
          "type": "ENV",
          "default": "/usr/lib/jvm/java-17-openjdk-amd64",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "PATH": {
          "description": "System PATH with additional tool directories",
          "type": "ENV",
          "default": "/usr/local/bin:/usr/bin:/bin",
          "mode_minimum": "basic",
          "security_level": "public"
        }
      }
    },
    "database": {
      "description": "Database configuration variables",
      "mode_minimum": "basic",
      "variables": {
        "POSTGRES_USER": {
          "description": "PostgreSQL username",
          "type": "COMPOSE",
          "default": "sandbox_user",
          "mode_minimum": "basic",
          "security_level": "sensitive",
          "examples": ["sandbox_user", "devuser", "postgres"]
        },
        "POSTGRES_PASSWORD": {
          "description": "PostgreSQL password (use secrets in production!)",
          "type": "COMPOSE",
          "default": "devpassword",
          "mode_minimum": "basic",
          "security_level": "secret",
          "warning": "Never commit real passwords! Use Docker secrets or VS Code input variables."
        },
        "POSTGRES_DB": {
          "description": "PostgreSQL database name",
          "type": "COMPOSE",
          "default": "sandbox_dev",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "POSTGRES_HOST": {
          "description": "PostgreSQL host (service name in docker-compose)",
          "type": "ENV",
          "default": "postgres",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "POSTGRES_PORT": {
          "description": "PostgreSQL port",
          "type": "ENV",
          "default": "5432",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "DATABASE_URL": {
          "description": "Full database connection URL",
          "type": "ENV",
          "default": "postgresql://sandbox_user:devpassword@postgres:5432/sandbox_dev",
          "mode_minimum": "basic",
          "security_level": "secret",
          "warning": "Contains credentials! Use VS Code input variables for production."
        },
        "MYSQL_ROOT_PASSWORD": {
          "description": "MySQL root password",
          "type": "COMPOSE",
          "default": "rootpassword",
          "mode_minimum": "intermediate",
          "security_level": "secret",
          "warning": "Never commit real passwords! Use Docker secrets."
        },
        "MYSQL_DATABASE": {
          "description": "MySQL database name",
          "type": "COMPOSE",
          "default": "sandbox_dev",
          "mode_minimum": "intermediate",
          "security_level": "public"
        },
        "MYSQL_USER": {
          "description": "MySQL application user",
          "type": "COMPOSE",
          "default": "sandbox_user",
          "mode_minimum": "intermediate",
          "security_level": "sensitive"
        },
        "MYSQL_PASSWORD": {
          "description": "MySQL application user password",
          "type": "COMPOSE",
          "default": "devpassword",
          "mode_minimum": "intermediate",
          "security_level": "secret",
          "warning": "Never commit real passwords! Use Docker secrets."
        },
        "MONGO_INITDB_ROOT_USERNAME": {
          "description": "MongoDB root username",
          "type": "COMPOSE",
          "default": "root",
          "mode_minimum": "intermediate",
          "security_level": "sensitive"
        },
        "MONGO_INITDB_ROOT_PASSWORD": {
          "description": "MongoDB root password",
          "type": "COMPOSE",
          "default": "rootpassword",
          "mode_minimum": "intermediate",
          "security_level": "secret",
          "warning": "Never commit real passwords! Use Docker secrets."
        },
        "MONGO_INITDB_DATABASE": {
          "description": "MongoDB initial database",
          "type": "COMPOSE",
          "default": "sandbox_dev",
          "mode_minimum": "intermediate",
          "security_level": "public"
        }
      }
    },
    "cache": {
      "description": "Caching service configuration",
      "mode_minimum": "basic",
      "variables": {
        "REDIS_HOST": {
          "description": "Redis host (service name in docker-compose)",
          "type": "ENV",
          "default": "redis",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "REDIS_PORT": {
          "description": "Redis port",
          "type": "ENV",
          "default": "6379",
          "mode_minimum": "basic",
          "security_level": "public"
        },
        "REDIS_PASSWORD": {
          "description": "Redis password (optional)",
          "type": "COMPOSE",
          "default": "",
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "Use Docker secrets for production."
        },
        "MEMCACHED_HOST": {
          "description": "Memcached host",
          "type": "ENV",
          "default": "memcached",
          "mode_minimum": "intermediate",
          "security_level": "public"
        },
        "MEMCACHED_PORT": {
          "description": "Memcached port",
          "type": "ENV",
          "default": "11211",
          "mode_minimum": "intermediate",
          "security_level": "public"
        }
      }
    },
    "messaging": {
      "description": "Message queue and broker configuration",
      "mode_minimum": "intermediate",
      "variables": {
        "RABBITMQ_DEFAULT_USER": {
          "description": "RabbitMQ username",
          "type": "COMPOSE",
          "default": "guest",
          "mode_minimum": "intermediate",
          "security_level": "sensitive"
        },
        "RABBITMQ_DEFAULT_PASS": {
          "description": "RabbitMQ password",
          "type": "COMPOSE",
          "default": "guest",
          "mode_minimum": "intermediate",
          "security_level": "secret",
          "warning": "Change default password for production!"
        },
        "RABBITMQ_HOST": {
          "description": "RabbitMQ host",
          "type": "ENV",
          "default": "rabbitmq",
          "mode_minimum": "intermediate",
          "security_level": "public"
        },
        "KAFKA_BROKER": {
          "description": "Kafka broker address",
          "type": "ENV",
          "default": "kafka:9092",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "KAFKA_ZOOKEEPER": {
          "description": "Kafka Zookeeper address",
          "type": "ENV",
          "default": "zookeeper:2181",
          "mode_minimum": "advanced",
          "security_level": "public"
        }
      }
    },
    "cloud": {
      "description": "Cloud provider configuration (use secrets!)",
      "mode_minimum": "advanced",
      "variables": {
        "AWS_REGION": {
          "description": "AWS region",
          "type": "ENV",
          "default": "us-east-1",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "AWS_ACCESS_KEY_ID": {
          "description": "AWS access key (NEVER use ENV! Use Docker secrets)",
          "type": "SECRET",
          "default": null,
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "CRITICAL: Never set as ENV variable! Use Docker secrets or VS Code input variables."
        },
        "AWS_SECRET_ACCESS_KEY": {
          "description": "AWS secret key (NEVER use ENV! Use Docker secrets)",
          "type": "SECRET",
          "default": null,
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "CRITICAL: Never set as ENV variable! Use Docker secrets or VS Code input variables."
        },
        "GCP_PROJECT_ID": {
          "description": "Google Cloud project ID",
          "type": "ENV",
          "default": "",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "GOOGLE_APPLICATION_CREDENTIALS": {
          "description": "Path to GCP service account key (use secret mount!)",
          "type": "SECRET",
          "default": "/run/secrets/gcp_key.json",
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "Mount as Docker secret, never commit JSON keys!"
        },
        "AZURE_SUBSCRIPTION_ID": {
          "description": "Azure subscription ID",
          "type": "ENV",
          "default": "",
          "mode_minimum": "advanced",
          "security_level": "public"
        },
        "AZURE_TENANT_ID": {
          "description": "Azure tenant ID",
          "type": "ENV",
          "default": "",
          "mode_minimum": "advanced",
          "security_level": "public"
        }
      }
    },
    "api_keys": {
      "description": "API keys and tokens (ALWAYS use secrets!)",
      "mode_minimum": "advanced",
      "variables": {
        "GITHUB_TOKEN": {
          "description": "GitHub personal access token (use VS Code input variable!)",
          "type": "VS_CODE_INPUT",
          "default": null,
          "mode_minimum": "intermediate",
          "security_level": "secret",
          "warning": "CRITICAL: Use VS Code input variables with password:true, never commit!"
        },
        "OPENAI_API_KEY": {
          "description": "OpenAI API key",
          "type": "VS_CODE_INPUT",
          "default": null,
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "CRITICAL: Use VS Code input variables with password:true"
        },
        "ANTHROPIC_API_KEY": {
          "description": "Anthropic API key",
          "type": "VS_CODE_INPUT",
          "default": null,
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "CRITICAL: Use VS Code input variables with password:true"
        },
        "STRIPE_SECRET_KEY": {
          "description": "Stripe secret API key",
          "type": "SECRET",
          "default": null,
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "Use Docker secrets, never ENV variables"
        },
        "SENDGRID_API_KEY": {
          "description": "SendGrid API key",
          "type": "SECRET",
          "default": null,
          "mode_minimum": "advanced",
          "security_level": "secret",
          "warning": "Use Docker secrets or VS Code input variables"
        }
      }
    },
    "firewall": {
      "description": "Firewall configuration variables",
      "mode_minimum": "basic",
      "variables": {
        "FIREWALL_MODE": {
          "description": "Firewall mode (disabled, permissive, strict)",
          "type": "ENV",
          "default": "disabled",
          "mode_minimum": "basic",
          "security_level": "public",
          "examples": ["disabled", "permissive", "strict"]
        },
        "FIREWALL_LOG_LEVEL": {
          "description": "Firewall logging level",
          "type": "ENV",
          "default": "info",
          "mode_minimum": "intermediate",
          "security_level": "public",
          "examples": ["debug", "info", "warning", "error"]
        }
      }
    },
    "custom": {
      "description": "User-defined custom variables (YOLO mode)",
      "mode_minimum": "yolo",
      "variables": {
        "CUSTOM_VAR_EXAMPLE": {
          "description": "Example custom variable - users define their own",
          "type": "ANY",
          "default": "",
          "mode_minimum": "yolo",
          "security_level": "public"
        }
      }
    }
  },
  "mode_defaults": {
    "basic": {
      "variable_count": 5,
      "categories": ["build", "runtime", "database", "cache"]
    },
    "intermediate": {
      "variable_count": 8,
      "categories": ["build", "runtime", "database", "cache", "messaging"]
    },
    "advanced": {
      "variable_count": 12,
      "categories": ["build", "runtime", "database", "cache", "messaging", "cloud", "api_keys"]
    },
    "yolo": {
      "variable_count": "custom",
      "categories": ["all"]
    }
  }
}
