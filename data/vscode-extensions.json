{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "VS Code extensions catalog for DevContainer configurations",
  "metadata": {
    "last_updated": "2025-12-16",
    "usage": "Skills reference this file to generate VS Code extension lists per mode"
  },
  "categories": {
    "essential": {
      "description": "Core extensions for all development",
      "mode_minimum": "basic",
      "extensions": [
        {"id": "anthropic.claude-code", "name": "Claude Code", "required": true},
        {"id": "ms-azuretools.vscode-docker", "name": "Docker"},
        {"id": "redhat.vscode-yaml", "name": "YAML"}
      ]
    },
    "git": {
      "description": "Git and version control",
      "mode_minimum": "basic",
      "extensions": [
        {"id": "eamodio.gitlens", "name": "GitLens"},
        {"id": "mhutchie.git-graph", "name": "Git Graph", "mode_minimum": "intermediate"}
      ]
    },
    "javascript": {
      "description": "JavaScript/TypeScript development",
      "mode_minimum": "basic",
      "platform": ["node", "javascript", "typescript"],
      "extensions": [
        {"id": "dbaeumer.vscode-eslint", "name": "ESLint"},
        {"id": "esbenp.prettier-vscode", "name": "Prettier"},
        {"id": "bradlc.vscode-tailwindcss", "name": "Tailwind CSS", "mode_minimum": "intermediate"},
        {"id": "christian-kohler.npm-intellisense", "name": "npm Intellisense", "mode_minimum": "intermediate"}
      ]
    },
    "python": {
      "description": "Python development",
      "mode_minimum": "basic",
      "platform": ["python"],
      "extensions": [
        {"id": "ms-python.python", "name": "Python"},
        {"id": "ms-python.vscode-pylance", "name": "Pylance"},
        {"id": "ms-python.black-formatter", "name": "Black Formatter", "mode_minimum": "intermediate"},
        {"id": "charliermarsh.ruff", "name": "Ruff", "mode_minimum": "advanced"}
      ]
    },
    "go": {
      "description": "Go development",
      "mode_minimum": "basic",
      "platform": ["go"],
      "extensions": [
        {"id": "golang.go", "name": "Go"}
      ]
    },
    "rust": {
      "description": "Rust development",
      "mode_minimum": "basic",
      "platform": ["rust"],
      "extensions": [
        {"id": "rust-lang.rust-analyzer", "name": "rust-analyzer"}
      ]
    },
    "java": {
      "description": "Java development",
      "mode_minimum": "basic",
      "platform": ["java"],
      "extensions": [
        {"id": "redhat.java", "name": "Language Support for Java"},
        {"id": "vscjava.vscode-maven", "name": "Maven", "mode_minimum": "intermediate"},
        {"id": "vscjava.vscode-java-pack", "name": "Java Extension Pack", "mode_minimum": "advanced"}
      ]
    },
    "cpp": {
      "description": "C/C++ development",
      "mode_minimum": "basic",
      "platform": ["cpp", "c"],
      "extensions": [
        {"id": "ms-vscode.cpptools", "name": "C/C++"},
        {"id": "ms-vscode.cmake-tools", "name": "CMake Tools", "mode_minimum": "intermediate"}
      ]
    },
    "ruby": {
      "description": "Ruby development",
      "mode_minimum": "basic",
      "platform": ["ruby"],
      "extensions": [
        {"id": "Shopify.ruby-lsp", "name": "Ruby LSP"},
        {"id": "rebornix.ruby", "name": "Ruby", "mode_minimum": "intermediate"}
      ]
    },
    "php": {
      "description": "PHP development",
      "mode_minimum": "basic",
      "platform": ["php"],
      "extensions": [
        {"id": "bmewburn.vscode-intelephense-client", "name": "PHP Intelephense"}
      ]
    },
    "database": {
      "description": "Database tools",
      "mode_minimum": "intermediate",
      "extensions": [
        {"id": "mtxr.sqltools", "name": "SQLTools"},
        {"id": "mongodb.mongodb-vscode", "name": "MongoDB", "mode_minimum": "advanced"},
        {"id": "cweijan.vscode-database-client2", "name": "Database Client", "mode_minimum": "advanced"}
      ]
    },
    "productivity": {
      "description": "Productivity tools",
      "mode_minimum": "intermediate",
      "extensions": [
        {"id": "streetsidesoftware.code-spell-checker", "name": "Code Spell Checker"},
        {"id": "usernamehw.errorlens", "name": "Error Lens", "mode_minimum": "advanced"},
        {"id": "christian-kohler.path-intellisense", "name": "Path Intellisense", "mode_minimum": "advanced"},
        {"id": "formulahendry.auto-rename-tag", "name": "Auto Rename Tag", "mode_minimum": "advanced"}
      ]
    },
    "themes": {
      "description": "Color themes and icons",
      "mode_minimum": "basic",
      "extensions": [
        {"id": "PKief.material-icon-theme", "name": "Material Icon Theme"},
        {"id": "GitHub.github-vscode-theme", "name": "GitHub Theme", "mode_minimum": "intermediate"},
        {"id": "dracula-theme.theme-dracula", "name": "Dracula Theme", "mode_minimum": "intermediate"},
        {"id": "EliverLara.andromeda", "name": "Andromeda Theme", "mode_minimum": "intermediate"},
        {"id": "zhuangtongfa.material-theme", "name": "One Dark Pro", "mode_minimum": "advanced"},
        {"id": "sdras.night-owl", "name": "Night Owl", "mode_minimum": "advanced"},
        {"id": "arcticicestudio.nord-visual-studio-code", "name": "Nord", "mode_minimum": "yolo"},
        {"id": "akamud.vscode-theme-onedark", "name": "Atom One Dark", "mode_minimum": "yolo"},
        {"id": "monokai.theme-monokai-pro-vscode", "name": "Monokai Pro", "mode_minimum": "yolo"}
      ]
    },
    "fun": {
      "description": "Fun and entertainment extensions",
      "mode_minimum": "basic",
      "extensions": [
        {"id": "johnpapa.vscode-peacock", "name": "Peacock"},
        {"id": "hoovercj.vscode-power-mode", "name": "Power Mode", "mode_minimum": "intermediate"},
        {"id": "tonybaloney.vscode-pets", "name": "VS Code Pets", "mode_minimum": "intermediate"},
        {"id": "wayou.vscode-todo-highlight", "name": "TODO Highlight", "mode_minimum": "advanced"},
        {"id": "icrawl.discord-vscode", "name": "Discord Presence", "mode_minimum": "yolo"},
        {"id": "s-nlf-fh.glassit", "name": "GlassIt (Transparency)", "mode_minimum": "yolo"},
        {"id": "be5invis.vscode-custom-css", "name": "Custom CSS/JS", "mode_minimum": "yolo"}
      ]
    }
  },
  "mode_defaults": {
    "basic": {
      "description": "Minimal extensions for quick setup",
      "include_categories": ["essential", "git"],
      "include_themes": 1,
      "include_fun": 1
    },
    "intermediate": {
      "description": "Balanced extension set",
      "include_categories": ["essential", "git", "productivity", "database"],
      "include_themes": 2,
      "include_fun": 2
    },
    "advanced": {
      "description": "Comprehensive extensions",
      "include_categories": ["essential", "git", "productivity", "database"],
      "include_themes": 4,
      "include_fun": 4
    },
    "yolo": {
      "description": "All available extensions",
      "include_categories": ["essential", "git", "productivity", "database"],
      "include_themes": "all",
      "include_fun": "all"
    }
  }
}
