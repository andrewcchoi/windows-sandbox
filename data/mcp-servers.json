{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "MCP (Model Context Protocol) servers catalog for DevContainer configurations",
  "metadata": {
    "last_updated": "2025-12-16",
    "usage": "Skills reference this file to generate MCP server configurations per mode",
    "references": [
      "https://docs.docker.com/ai/mcp-catalog-and-toolkit/hub-mcp/",
      "https://code.visualstudio.com/docs/copilot/customization/mcp-servers"
    ]
  },
  "servers": {
    "filesystem": {
      "description": "Access to local filesystem",
      "type": "stdio",
      "mode_minimum": "basic",
      "category": "core",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "env": {}
    },
    "memory": {
      "description": "Conversation memory and context",
      "type": "stdio",
      "mode_minimum": "basic",
      "category": "core",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {}
    },
    "sqlite": {
      "description": "SQLite database access",
      "type": "stdio",
      "mode_minimum": "basic",
      "category": "database",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "--db-path", "/workspace/data.db"],
      "env": {}
    },
    "fetch": {
      "description": "Web content fetching",
      "type": "stdio",
      "mode_minimum": "intermediate",
      "category": "web",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "env": {}
    },
    "postgres": {
      "description": "PostgreSQL database queries",
      "type": "stdio",
      "mode_minimum": "intermediate",
      "category": "database",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${input:postgresConnectionString}"
      },
      "inputs": {
        "postgresConnectionString": {
          "type": "promptString",
          "description": "PostgreSQL connection string",
          "default": "postgresql://user:password@localhost:5432/db"
        }
      }
    },
    "github": {
      "description": "GitHub API integration",
      "type": "stdio",
      "mode_minimum": "intermediate",
      "category": "version_control",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${input:githubToken}"
      },
      "inputs": {
        "githubToken": {
          "type": "promptString",
          "description": "GitHub personal access token",
          "password": true
        }
      }
    },
    "docker": {
      "description": "Docker Hub search and management",
      "type": "stdio",
      "mode_minimum": "intermediate",
      "category": "container",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/docker"],
      "env": {}
    },
    "brave-search": {
      "description": "Brave Search API",
      "type": "stdio",
      "mode_minimum": "advanced",
      "category": "web",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${input:braveApiKey}"
      },
      "inputs": {
        "braveApiKey": {
          "type": "promptString",
          "description": "Brave Search API key",
          "password": true
        }
      }
    },
    "puppeteer": {
      "description": "Browser automation",
      "type": "stdio",
      "mode_minimum": "advanced",
      "category": "web",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "env": {}
    },
    "slack": {
      "description": "Slack workspace integration",
      "type": "stdio",
      "mode_minimum": "yolo",
      "category": "communication",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${input:slackBotToken}",
        "SLACK_TEAM_ID": "${input:slackTeamId}"
      },
      "inputs": {
        "slackBotToken": {
          "type": "promptString",
          "description": "Slack bot token",
          "password": true
        },
        "slackTeamId": {
          "type": "promptString",
          "description": "Slack team ID"
        }
      }
    },
    "google-drive": {
      "description": "Google Drive access",
      "type": "stdio",
      "mode_minimum": "yolo",
      "category": "storage",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-gdrive"],
      "env": {}
    }
  },
  "mode_defaults": {
    "basic": {
      "description": "Essential MCP servers",
      "servers": ["filesystem", "memory"]
    },
    "intermediate": {
      "description": "Common development servers",
      "servers": ["filesystem", "memory", "sqlite", "fetch", "github"]
    },
    "advanced": {
      "description": "Comprehensive server set",
      "servers": ["filesystem", "memory", "sqlite", "fetch", "github", "postgres", "docker", "brave-search"]
    },
    "yolo": {
      "description": "All available servers",
      "servers": "all"
    }
  }
}
