{
  "permissions": {
    "allow": [],
    "ask": [],
    "deny": [],
    "defaultMode": "default"
  },
  "model": "opusplan",
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "CLAUDE_CODE_USE_FOUNDRY": "1",
    "ANTHROPIC_FOUNDRY_API_KEY": "your_api_key_here",
    "ANTHROPIC_FOUNDRY_RESOURCE": "your_resource_name_here",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-haiku-4-5",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-4-5",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4-5",
    "TRACE_TO_LANGSMITH": "true",
    "CC_LANGSMITH_API_KEY": "lsv2_pt_...",
    "CC_LANGSMITH_PROJECT": "pr-project-name-00",
    "CC_LANGSMITH_DEBUG": "true",
    "CC_LANGSMITH_ENVIRONMENT": "custom-label"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "comment": "For Linux/macOS/WSL/DevContainer use: bash ~/.claude/hooks/stop_hook.sh",
            "comment2": "For Windows native use: powershell -ExecutionPolicy Bypass -File \"%USERPROFILE%\\.claude\\hooks\\stop_hook.ps1\"",
            "command": "bash ~/.claude/hooks/stop_hook.sh"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker"],
    "network": {
      "allowUnixSockets": ["/var/run/docker.sock"],
      "allowLocalBinding": true
    }
  }
}
