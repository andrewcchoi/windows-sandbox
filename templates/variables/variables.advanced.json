{
  "mode": "advanced",
  "description": "Comprehensive configuration with cloud integrations, strict security, and multi-language support",
  "build_args": {
    "PYTHON_VERSION": "3.12",
    "NODE_VERSION": "20",
    "GO_VERSION": "1.22",
    "RUST_VERSION": "stable",
    "JAVA_VERSION": "17",
    "TZ": "UTC",
    "DEBIAN_FRONTEND": "noninteractive",
    "CLAUDE_CODE_VERSION": "latest"
  },
  "runtime_env": {
    "NODE_ENV": "development",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "GOPATH": "/go",
    "GOBIN": "/go/bin",
    "RUST_BACKTRACE": "1",
    "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64",
    "FIREWALL_MODE": "strict",
    "FIREWALL_LOG_LEVEL": "info"
  },
  "compose_env": {
    "POSTGRES_USER": "sandbox_user",
    "POSTGRES_PASSWORD": "devpassword",
    "POSTGRES_DB": "sandbox_dev",
    "POSTGRES_HOST": "postgres",
    "POSTGRES_PORT": "5432",
    "REDIS_HOST": "redis",
    "REDIS_PORT": "6379",
    "RABBITMQ_DEFAULT_USER": "admin",
    "RABBITMQ_DEFAULT_PASS": "change_this_password",
    "RABBITMQ_HOST": "rabbitmq",
    "RABBITMQ_PORT": "5672",
    "RABBITMQ_MANAGEMENT_PORT": "15672"
  },
  "cloud_config": {
    "aws": {
      "AWS_REGION": "us-east-1",
      "AWS_PROFILE": "default"
    },
    "gcp": {
      "GCP_PROJECT_ID": "your-project-id",
      "GOOGLE_APPLICATION_CREDENTIALS": "/run/secrets/gcp_key.json"
    },
    "azure": {
      "AZURE_SUBSCRIPTION_ID": "your-subscription-id",
      "AZURE_TENANT_ID": "your-tenant-id"
    }
  },
  "derived_vars": {
    "_note": "URLs constructed from components. Application code handles URL encoding for special characters in credentials.",
    "DATABASE_URL": "postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"
  },
  "vs_code_inputs": {
    "githubToken": {
      "type": "promptString",
      "description": "GitHub personal access token",
      "password": true,
      "required": true
    },
    "dbPassword": {
      "type": "promptString",
      "description": "PostgreSQL password",
      "password": true,
      "required": false,
      "default": "devpassword"
    },
    "openaiKey": {
      "type": "promptString",
      "description": "OpenAI API key (optional)",
      "password": true,
      "required": false
    },
    "anthropicKey": {
      "type": "promptString",
      "description": "Anthropic API key (optional)",
      "password": true,
      "required": false
    },
    "redisPassword": {
      "type": "promptString",
      "description": "Redis password (optional)",
      "password": true,
      "required": false
    }
  },
  "docker_secrets": [
    {
      "id": "aws_credentials",
      "description": "AWS credentials file",
      "mount_path": "/root/.aws/credentials",
      "usage": "Mount from host ~/.aws directory"
    },
    {
      "id": "gcp_key",
      "description": "GCP service account JSON key",
      "mount_path": "/run/secrets/gcp_key.json",
      "usage": "Mount as Docker secret during build"
    },
    {
      "id": "npm_token",
      "description": "NPM registry token",
      "mount_path": "/run/secrets/npm_token",
      "usage": "For private package installation"
    },
    {
      "id": "pypi_token",
      "description": "PyPI authentication token",
      "mount_path": "/run/secrets/pypi_token",
      "usage": "For private package installation"
    },
    {
      "id": "ssl_cert",
      "description": "SSL certificate",
      "mount_path": "/run/secrets/ssl_cert",
      "usage": "For HTTPS configuration"
    },
    {
      "id": "ssl_key",
      "description": "SSL private key",
      "mount_path": "/run/secrets/ssl_key",
      "usage": "For HTTPS configuration"
    }
  ],
  "resource_limits": {
    "cpu": "2.0",
    "memory": "4g",
    "swap": "2g"
  },
  "optional_services": {
    "mysql": {
      "MYSQL_ROOT_PASSWORD": "rootpassword",
      "MYSQL_DATABASE": "sandbox_dev",
      "MYSQL_USER": "sandbox_user",
      "MYSQL_PASSWORD": "devpassword"
    },
    "mongodb": {
      "MONGO_INITDB_ROOT_USERNAME": "root",
      "MONGO_INITDB_ROOT_PASSWORD": "rootpassword",
      "MONGO_INITDB_DATABASE": "sandbox_dev"
    },
    "kafka": {
      "KAFKA_BROKER": "kafka:9092",
      "KAFKA_ZOOKEEPER": "zookeeper:2181"
    },
    "elasticsearch": {
      "ELASTICSEARCH_HOST": "elasticsearch",
      "ELASTICSEARCH_PORT": "9200"
    }
  },
  "security_requirements": [
    "Change ALL default passwords before production use",
    "Configure VS Code input variables for API keys (NEVER use ENV)",
    "Mount cloud credentials from host (~/.aws, ~/.config/gcloud, ~/.azure)",
    "Use Docker secret mounts for private registry tokens",
    "Enable strict firewall mode with custom allowlist",
    "Configure resource limits for containers",
    "Use SSL/TLS certificates for production services",
    "Rotate secrets regularly",
    "Add .env files to .gitignore"
  ],
  "notes": [
    "Advanced mode supports multiple programming languages",
    "Strict firewall requires explicit domain allowlist configuration",
    "Comprehensive VS Code input variables for secure credential management",
    "Docker secret mounts for build-time credentials",
    "Resource limits prevent container resource exhaustion",
    "Suitable for production-like development environments"
  ]
}
