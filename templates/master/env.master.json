{
  "description": "Master environment template combining all environment variables from all modes (basic, intermediate, advanced, yolo)",
  "notes": [
    "This is a comprehensive reference template showing ALL possible environment variables",
    "Copy relevant sections to your .env file based on your mode and requirements",
    "Remove unused sections to keep your .env clean and maintainable",
    "Basic mode: Use minimal set with defaults",
    "Intermediate mode: Add version customization and message queue",
    "Advanced mode: Add multi-language support and cloud integrations",
    "YOLO mode: Full customization with all options"
  ],
  "basic_variables": {
    "description": "Minimal essential variables for basic mode",
    "build_args": {
      "TZ": "UTC",
      "DEBIAN_FRONTEND": "noninteractive"
    },
    "runtime_env": {
      "NODE_ENV": "development",
      "PYTHONUNBUFFERED": "1",
      "PYTHONDONTWRITEBYTECODE": "1"
    },
    "database": {
      "POSTGRES_USER": "sandbox_user",
      "POSTGRES_PASSWORD": "devpassword",
      "POSTGRES_DB": "sandbox_dev",
      "POSTGRES_HOST": "postgres",
      "POSTGRES_PORT": "5432"
    },
    "cache": {
      "REDIS_HOST": "redis",
      "REDIS_PORT": "6379"
    }
  },
  "intermediate_variables": {
    "description": "Standard development variables for intermediate mode",
    "build_args": {
      "PYTHON_VERSION": "3.12",
      "NODE_VERSION": "20",
      "TZ": "UTC",
      "DEBIAN_FRONTEND": "noninteractive",
      "CLAUDE_CODE_VERSION": "latest"
    },
    "runtime_env": {
      "NODE_ENV": "development",
      "PYTHONUNBUFFERED": "1",
      "PYTHONDONTWRITEBYTECODE": "1",
      "FIREWALL_MODE": "permissive"
    },
    "message_queue": {
      "RABBITMQ_DEFAULT_USER": "guest",
      "RABBITMQ_DEFAULT_PASS": "guest",
      "RABBITMQ_HOST": "rabbitmq",
      "RABBITMQ_PORT": "5672",
      "RABBITMQ_MANAGEMENT_PORT": "15672"
    }
  },
  "advanced_variables": {
    "description": "Comprehensive variables for advanced mode with multi-language support",
    "build_args": {
      "PYTHON_VERSION": "3.12",
      "NODE_VERSION": "20",
      "GO_VERSION": "1.22",
      "RUST_VERSION": "stable",
      "JAVA_VERSION": "17",
      "TZ": "UTC",
      "DEBIAN_FRONTEND": "noninteractive",
      "CLAUDE_CODE_VERSION": "latest"
    },
    "runtime_env": {
      "NODE_ENV": "development",
      "PYTHONUNBUFFERED": "1",
      "PYTHONDONTWRITEBYTECODE": "1",
      "GOPATH": "/go",
      "GOBIN": "/go/bin",
      "RUST_BACKTRACE": "1",
      "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64",
      "FIREWALL_MODE": "strict",
      "FIREWALL_LOG_LEVEL": "info"
    },
    "security": {
      "RABBITMQ_DEFAULT_USER": "admin",
      "RABBITMQ_DEFAULT_PASS": "change_this_password"
    }
  },
  "yolo_variables": {
    "description": "Maximum flexibility variables for yolo mode",
    "build_args": {
      "BASE_IMAGE": "ubuntu:22.04",
      "PYTHON_VERSION": "3.12",
      "NODE_VERSION": "20",
      "GO_VERSION": "1.22",
      "RUST_VERSION": "stable",
      "JAVA_VERSION": "17",
      "RUBY_VERSION": "3.2",
      "PHP_VERSION": "8.2",
      "TZ": "UTC",
      "CLAUDE_CODE_VERSION": "latest"
    },
    "runtime_env": {
      "NODE_ENV": "development",
      "RAILS_ENV": "development",
      "FLASK_ENV": "development",
      "FIREWALL_MODE": "configurable",
      "FIREWALL_LOG_LEVEL": "debug",
      "LOG_LEVEL": "info",
      "DEBUG": "false"
    },
    "language_specific": {
      "PYTHONPATH": "/workspace",
      "GOPATH": "/go",
      "GOBIN": "/go/bin",
      "GOCACHE": "/go-cache",
      "CARGO_HOME": "/usr/local/cargo",
      "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64",
      "MAVEN_HOME": "/usr/share/maven",
      "GRADLE_HOME": "/opt/gradle",
      "GEM_HOME": "/usr/local/bundle",
      "BUNDLE_PATH": "/usr/local/bundle"
    }
  },
  "cloud_providers": {
    "aws": {
      "AWS_REGION": "us-east-1",
      "AWS_PROFILE": "default"
    },
    "gcp": {
      "GCP_PROJECT_ID": "your-project-id",
      "GCP_REGION": "us-central1",
      "GOOGLE_APPLICATION_CREDENTIALS": "/run/secrets/gcp_key.json"
    },
    "azure": {
      "AZURE_SUBSCRIPTION_ID": "your-subscription-id",
      "AZURE_TENANT_ID": "your-tenant-id",
      "AZURE_RESOURCE_GROUP": "your-resource-group"
    },
    "digitalocean": {
      "DO_REGION": "nyc3"
    }
  },
  "optional_databases": {
    "mysql": {
      "MYSQL_ROOT_PASSWORD": "rootpassword",
      "MYSQL_DATABASE": "sandbox_dev",
      "MYSQL_USER": "sandbox_user",
      "MYSQL_PASSWORD": "devpassword",
      "MYSQL_HOST": "mysql",
      "MYSQL_PORT": "3306"
    },
    "mongodb": {
      "MONGO_INITDB_ROOT_USERNAME": "root",
      "MONGO_INITDB_ROOT_PASSWORD": "rootpassword",
      "MONGO_INITDB_DATABASE": "sandbox_dev",
      "MONGO_HOST": "mongodb",
      "MONGO_PORT": "27017"
    }
  },
  "optional_services": {
    "memcached": {
      "MEMCACHED_HOST": "memcached",
      "MEMCACHED_PORT": "11211"
    },
    "kafka": {
      "KAFKA_BROKER": "kafka:9092",
      "KAFKA_ZOOKEEPER": "zookeeper:2181",
      "KAFKA_TOPIC": "events"
    },
    "elasticsearch": {
      "ELASTICSEARCH_HOST": "elasticsearch",
      "ELASTICSEARCH_PORT": "9200"
    }
  },
  "application_urls": {
    "APP_URL": "http://localhost:3000",
    "API_URL": "http://localhost:8000",
    "FRONTEND_URL": "http://localhost:3000",
    "BACKEND_URL": "http://localhost:8000"
  },
  "security_secrets": {
    "SESSION_SECRET": "change-this-to-random-string",
    "JWT_SECRET": "change-this-to-random-string",
    "ENCRYPTION_KEY": "change-this-to-random-key"
  },
  "monitoring": {
    "PROMETHEUS_PORT": "9090",
    "GRAFANA_ADMIN_PASSWORD": "admin",
    "JAEGER_AGENT_HOST": "jaeger",
    "SENTRY_DSN": "your-sentry-dsn"
  },
  "resource_limits": {
    "CPU_LIMIT": "2.0",
    "MEMORY_LIMIT": "4g",
    "SWAP_LIMIT": "2g",
    "PIDS_LIMIT": "1024"
  },
  "derived_urls": {
    "DATABASE_URL": "postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}",
    "MONGODB_URI": "mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_INITDB_DATABASE}",
    "REDIS_URL": "redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}",
    "RABBITMQ_URL": "amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}"
  },
  "best_practices": [
    "Copy this template to .env in your project root",
    "Remove unused sections to keep configuration clean",
    "Change ALL default passwords before production use",
    "Use VS Code input variables for API keys (NEVER commit secrets)",
    "Add .env to .gitignore immediately",
    "Use Docker secrets for build-time credentials",
    "Mount cloud credentials from host (~/.aws, ~/.config/gcloud, ~/.azure)",
    "Document required environment variables for your team",
    "Test with different configurations in separate environments",
    "Rotate secrets regularly in production"
  ],
  "mode_breakdown": {
    "basic": "Minimal variables - quick start with defaults",
    "intermediate": "Standard variables - customizable language versions + message queue",
    "advanced": "Comprehensive variables - multi-language + cloud + strict security",
    "yolo": "All variables - maximum flexibility and customization"
  }
}
