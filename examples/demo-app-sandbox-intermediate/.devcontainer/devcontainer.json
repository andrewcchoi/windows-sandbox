{
  "name": "demo-app-sandbox-intermediate",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postStartCommand": ".devcontainer/init-firewall.sh",
  "postCreateCommand": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
  "forwardPorts": [8000, 5173, 5432, 6379, 5672, 15672]
}
