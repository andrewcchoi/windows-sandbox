{
  "name": "streamlit-sandbox-basic",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "postStartCommand": "sudo FIREWALL_MODE=\"$FIREWALL_MODE\" /usr/local/bin/init-firewall.sh",
  "postCreateCommand": ".devcontainer/setup-claude-credentials.sh && uv add -r requirements.txt",
  "forwardPorts": [8501, 5432, 6379]
}
