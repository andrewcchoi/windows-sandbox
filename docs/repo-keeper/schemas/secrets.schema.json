{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude.ai/schemas/secrets.schema.json",
  "title": "Secrets Configuration Schema",
  "description": "Schema for secrets.json - master catalog of secret handling patterns",
  "type": "object",
  "required": ["version", "description", "categories"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the secrets catalog",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this catalog"
    },
    "categories": {
      "type": "object",
      "description": "Secret categories organized by use case",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "mode_minimum": {
              "type": "string",
              "enum": ["basic", "intermediate", "advanced", "yolo"]
            },
            "secrets": {
              "type": "object"
            }
          },
          "required": ["description"]
        }
      }
    }
  }
}
